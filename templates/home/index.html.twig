{% block stylesheets %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;900&display=swap');

    :root {
        --maao-blue: #1e3799;
        --maao-blue-light: #4a69bd;
        --maao-blue-dark: #0c2461;
        --maao-red: #e84118;
        --maao-yellow: #fbc531;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Montserrat', sans-serif;
        overflow-x: hidden;
    }

    /* Header Styles */
    .header-top {
        background-color: var(--maao-blue);
        padding: 15px 0;
        color: white;
    }

    .barangay-logo {
        height: 60px;
        margin-right: 15px;
    }

    .barangay-title {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 0;
        line-height: 1.2;
    }

    .barangay-name {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0;
        line-height: 1.2;
    }

    .barangay-location {
        font-size: 0.9rem;
        font-weight: 400;
        margin-bottom: 0;
    }

    .time-display {
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    .time-suffix {
        font-size: 1rem;
        margin-left: 5px;
    }
    
    .seconds-display {
        font-size: 1.2rem;
        opacity: 0.8;
        margin-left: 2px;
    }

    .search-box {
        width: 100%;
        padding: 10px 15px;
        border-radius: 5px;
        border: none;
    }

    /* Navigation Styles */
    .main-nav {
        background-color: white;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        position: relative;
        z-index: 10;
    }

    .nav-item .nav-link {
        color: #333;
        font-weight: 600;
        padding: 15px 20px;
        transition: all 0.3s ease;
    }

    .nav-item .nav-link:hover,
    .nav-item .nav-link.active {
        color: var(--maao-blue);
    }

    .dropdown-toggle::after {
        margin-left: 0.5em;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        overflow: hidden;
        min-height: 80vh;
        display: flex;
        align-items: center;
        padding: 6rem 0;
        z-index: 1;
    }

    .hero-section::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--maao-blue);
        opacity: 0.3;
        z-index: -1;
    }

    .hero-slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -2;
    }

    .hero-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: transform 1s ease, opacity 1s ease;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transform: translateX(100%);
    }

    .hero-slide.active {
        opacity: 1;
        transform: translateX(0);
        z-index: 1;
    }
    
    .hero-slide.previous {
        transform: translateX(-100%);
        opacity: 0;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 6.5rem;
        font-weight: 900;
        color: white;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        line-height: 1;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 3rem;
        max-width: 600px;
    }

    .btn-more {
        background-color: var(--maao-blue-dark);
        color: white;
        border: none;
        padding: 0.8rem 3rem;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

    .btn-more:hover {
        background-color: var(--maao-blue);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .officials-container {
        position: relative;
        height: 450px;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        background-color: transparent;
        border: none;
        box-shadow: none;
        overflow: visible;
    }

    .officials-photo {
        width: 100%;
        height: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }

    .official-img2 {
        height: 300px;
        object-fit: contain;
        object-position: bottom;
        margin: 0 -20px;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
    }

    .official-img {
        height: 380px;
        object-fit: contain;
        object-position: bottom;
        margin: 0 -80px;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
    }
     
    
    .official-img:first-child {
        z-index: 2;
    }

    .official-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
        color: white;
        display: flex;
        justify-content: space-around;
        padding: 0;
    }

    .official-details {
        text-align: center;
        width: 50%;
        padding: 8px 15px;
        background-color: rgba(12, 36, 97, 0.8);
        border-radius: 5px;
        margin: 0 10px;
    }

    .official-name {
        color: white;
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 0.2rem;
    }

    .official-position {
        color: var(--maao-yellow);
        font-size: 0.75rem;
        margin-bottom: 0;
    }

    /* Services Section */
    .services-section {
        padding: 5rem 0;
        background-color: #f8f9fa;
    }

    .section-title {
        color: var(--maao-blue);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        position: relative;
        padding-bottom: 15px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 80px;
        height: 4px;
        background: var(--maao-red);
    }

    .service-card {
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
