{% extends 'base.html.twig' %}

{% block title %}Register - Barangay Ma-ao{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row vh-100">
        <!-- Left Panel with Image and Overlay -->
        <div class="col-lg-5 d-none d-lg-block p-0">
            <div class="position-relative h-100">
                <img src="{{ asset('images/maao logo.png') }}" alt="Barangay Ma-ao" class="w-100 h-100 object-fit-cover">
                <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(30, 55, 153, 0.7);">
                    <div class="d-flex flex-column justify-content-center align-items-center h-100 text-white p-5">
                        <img src="{{ asset('images/maao logo.png') }}" alt="Barangay Logo" class="mb-4" style="max-width: 120px;">
                        <h2 class="display-4 fw-bold mb-3">Join Our Community</h2>
                        <p class="lead text-center mb-4">Register to access Barangay Ma-ao services and information</p>
                        <div class="bg-white rounded p-3 text-dark" style="max-width: 400px;">
                            <p class="mb-0 fst-italic text-center">"Together we build a stronger and more connected community."</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Panel with Registration Form -->
        <div class="col-lg-7 col-md-12">
            <div class="d-flex justify-content-center align-items-center h-100 py-5">
                <div class="card border-0 shadow rounded-4 w-100" style="max-width: 700px;">
                    <div class="card-body p-4 p-lg-5">
                        <div class="text-center mb-4">
                            <img src="{{ asset('images/maao logo.png') }}" alt="Barangay Logo" class="d-lg-none mb-3" style="max-width: 80px;">
                            <h3 class="fw-bold text-primary">Resident Registration</h3>
                            <p class="text-muted">Create your account to access Barangay services</p>
                        </div>

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'First Name'}}) }}
                                    {{ form_label(registrationForm.firstName) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.firstName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Last Name'}}) }}
                                    {{ form_label(registrationForm.lastName) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.lastName) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Email'}}) }}
                            {{ form_label(registrationForm.email) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Password'}}) }}
                            {{ form_label(registrationForm.plainPassword) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Address'}}) }}
                            {{ form_label(registrationForm.address) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.address) }}
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(registrationForm.contactNumber, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Contact Number'}}) }}
                            {{ form_label(registrationForm.contactNumber) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.contactNumber) }}
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.civilStatus, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Civil Status'}}) }}
                                    {{ form_label(registrationForm.civilStatus) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.civilStatus) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.birthDate, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Birth Date'}}) }}
                                    {{ form_label(registrationForm.birthDate) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.birthDate) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary btn-lg rounded-3" type="submit">Register</button>
                        </div>
                        {{ form_end(registrationForm) }}

                        <div class="text-center mt-4">
                            <p class="mb-0">Already have an account? <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Login here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 